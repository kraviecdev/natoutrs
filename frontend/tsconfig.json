{
  "compilerOptions": {
    "strict": true,
    "target": "ES6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./src",
    "rootDir": "./src_ts",
    "removeComments": true,
    "noImplicitAny": true
  },
  "include": ["src_ts"],
  "exclude": ["node_modules", "dist"]
}
